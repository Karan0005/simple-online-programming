{
    "name": "frontend",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "apps/frontend/src",
    "tags": [],
    "cli": {
        "cache": {
            "enabled": false
        }
    },
    "targets": {
        "build": {
            "executor": "@angular-builders/custom-webpack:browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "customWebpackConfig": {
                    "path": "apps/frontend/webpack.config.ts"
                },
                "allowedCommonJsDependencies": ["monaco-editor", "style-loader"],
                "outputPath": "dist/apps/frontend",
                "index": "apps/frontend/src/index.html",
                "main": "apps/frontend/src/main.ts",
                "polyfills": ["zone.js"],
                "tsConfig": "apps/frontend/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/frontend/src/assets",
                        "output": "assets"
                    }
                ],
                "styles": [
                    "apps/frontend/src/styles.scss",
                    "node_modules/bootstrap/scss/bootstrap.scss",
                    "node_modules/bootstrap-icons/font/bootstrap-icons.scss"
                ],
                "scripts": ["node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"]
            },
            "configurations": {
                "prod": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "7mb",
                            "maximumError": "10mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "8kb",
                            "maximumError": "16kb"
                        }
                    ],
                    "outputHashing": "all",
                    "fileReplacements": [
                        {
                            "replace": "apps/frontend/src/config/config.ts",
                            "with": "apps/frontend/src/config/config.prod.ts"
                        }
                    ],
                    "optimization": {
                        "scripts": true,
                        "styles": {
                            "minify": true,
                            "inlineCritical": false
                        },
                        "fonts": true
                    },
                    "sourceMap": false,
                    "extractLicenses": true,
                    "namedChunks": false,
                    "aot": true,
                    "crossOrigin": "anonymous"
                },
                "dev": {
                    "optimization": false,
                    "extractLicenses": false,
                    "namedChunks": true,
                    "aot": true,
                    "outputHashing": "none",
                    "fileReplacements": [
                        {
                            "replace": "apps/frontend/src/config/config.ts",
                            "with": "apps/frontend/src/config/config.dev.ts"
                        }
                    ],
                    "sourceMap": true
                },
                "uat": {
                    "optimization": false,
                    "extractLicenses": false,
                    "namedChunks": true,
                    "aot": true,
                    "outputHashing": "none",
                    "fileReplacements": [
                        {
                            "replace": "apps/frontend/src/config/config.ts",
                            "with": "apps/frontend/src/config/config.uat.ts"
                        }
                    ],
                    "sourceMap": true
                },
                "local": {
                    "optimization": false,
                    "extractLicenses": false,
                    "namedChunks": true,
                    "aot": true,
                    "outputHashing": "none",
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "prod"
        },
        "serve": {
            "executor": "@angular-builders/custom-webpack:dev-server",
            "configurations": {
                "prod": {
                    "buildTarget": "frontend:build:prod"
                },
                "dev": {
                    "buildTarget": "frontend:build:dev"
                },
                "uat": {
                    "buildTarget": "frontend:build:uat"
                },
                "local": {
                    "buildTarget": "frontend:build:local"
                }
            },
            "defaultConfiguration": "local"
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "frontend:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/frontend/jest.config.ts"
            }
        },
        "serve-static": {
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "frontend:build",
                "port": 4200,
                "spa": true
            }
        }
    }
}
